# 生产环境配置
ENVIRONMENT=production
DEBUG=false
HOST=0.0.0.0
PORT=8000

# 安全配置 - 生产环境必须设置强密钥
SECRET_KEY=${SECRET_KEY}
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 数据库配置
DATABASE_URL=${DATABASE_URL}

# CORS配置 - 生产环境限制域名
CORS_ORIGINS=${CORS_ORIGINS}

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/production.log

# 文件上传配置
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# Redis配置（可选）
REDIS_URL=${REDIS_URL}